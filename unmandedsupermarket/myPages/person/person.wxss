page {
  background: black;
}
.page-body-info {
  padding-bottom: 0;
  display: flex;
  height: 150rpx;
  flex-direction: row;
  width: 85%;
  background: #ff4611;
  margin-left: 4.5%;
  padding: 20rpx;
  justify-content: space-around;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  margin-top: 40rpx;
}
.userinfo {
  border: 1px solid red;
  line-height: 100rpx;
  font-size: 1rpx;
}
.userinfo:nth-of-type(1){
  border:none;
  font-size: 30rpx;
}
.userinfo:nth-of-type(2){
  width: 150rpx;
  font-size: 35rpx;
  text-align: center;
  border-radius: 20rpx;
  height: 60rpx;
  color: yellow;
}
.userinfochongzhi{
  position: absolute;
  top: 95rpx;
  right: 145rpx;
}
.userinfo-avatar {
  border-radius: 128rpx;
  width: 128rpx;
  height: 128rpx;
}
.userinfo-nickname {
  margin-top: 20rpx;
  font-size: 38rpx;
}
/*中间三个菜单  */
.page-center {
  width: 100%;
  height: 200rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.page-center-img{
  width: 100rpx;
  height: 100rpx;
}
.page-center-item {
  width: 20%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 20rpx;
}
.page-center-dec{
  margin-top: 15rpx;
  margin-left: -10rpx;
}
/* 下边菜单 */
.page-bottom {
  width: 100%;
  height: 740rpx;
  background: #faf8f7;
  display: flex;
  flex-direction: column;
}
.page-bottom-item {
  width: 100%;
  height: 60rpx;
  margin-top: 10rpx;
  background: white;
  padding: 10rpx;
  line-height: 100rpx;
  display: flex;
}
.page-bottom-img{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.page-bottom-dec{
  margin-top: -15rpx;
  color: gray;
}
.page-bottom-arro{
  color: #bbb8b7;
  font-size: 50rpx;
  position: absolute;
  right: 15rpx;
  margin-top: -15rpx;
}
.arro-img{
  margin-top: 25rpx;
  margin-right: -8rpx;
  width: 50rpx;
  height: 50rpx;
}
.page-bottom-balatrr{
  position: absolute;
  right: 70rpx;
  color: red;
  font-size: 40rpx;
}